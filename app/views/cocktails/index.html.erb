<div class="container">
  <div class="cards-cocktails">

    <% @cocktails.each do |cocktail| %>
      <div class="card-trip shadow taille-card d-flex flex-column">
        <div class="image" style="background-image: url('<%= cl_image_path cocktail.photo.key, width: 250, height: 400, crop: :mfit %>')" ></div>

        <div class="card-trip-infos taille-card-texte">
          <div class="d-flex justify-content-center">
            <h3 class="text-center"><%= cocktail.name %></h3>
            <%= link_to "Delete", cocktail_path(cocktail),
                        :confirm => "Are you sure?",
                        method: :delete %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
